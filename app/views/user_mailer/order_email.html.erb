<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <h1>Your order # <%= @order.id %> has successfully been processed. Thanks for your business <%= @current_user.first_name %>!</h1>
  </body>

  <!-- new added order items -->

  <section class="orders-show">
    
      <header class="page-header">
        <h1>Order #
          <%= @order.id %>
        </h1>
        <h3>Email: <%= @order.email %></h3>
      </header>
    
      <div class="panel panel-default items">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th colspan="2">Product</th>
              <th>Unit Price</th>
              <th>Quantity</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
    
            <% @items.each do |item| %>
              <%= render 'item', product_id: item.product_id, item: item%>
            <% end %>
    
          </tbody>
          <tfoot>
            <tr>
              <th colspan="4">
                TOTAL:
              </th>
              <th>
                <%= humanized_money_with_symbol (@order.total_cents / 100.0) %>
              </th>
            </tr>
          </tfoot>
        </table>
      </div>
    
    </section>

</html>