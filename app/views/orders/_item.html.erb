<% if product = Product.find(product_id) %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      <%= item.total_price_cents %>
    </td>
  </tr>

<% end %>
