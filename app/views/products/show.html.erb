<section class="products-show">

  <header class="page-header">
    <h1>
      <%= link_to @product.category.name, @product.category %> &raquo;
        <%= @product.name %>
    </h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd>
            <%= @product.name %>
          </dd>
          <dt>Description</dt>
          <dd>
            <%= @product.description %>
          </dd>
          <dt>Quantity</dt>
          <dd>
            <%= @product.quantity %>
          </dd>
          <dt>Price</dt>
          <dd>
            <%= @product.price %>
          </dd>
        </dl>
      </div>
    </div>

    <h2>Reviews:</h2>

    <div class="row">

      <div class="col-sm-2">
        <dt>User</dt>
      </div>

      <div class="col-sm-2">
        <dt>Rating</dt>
      </div>

      <div class="col-sm-6">
        <dt>Description</dt>
      </div>

      <div class="col-sm-2">
        <dt>Date Posted</dt>
      </div>

    </div>

    <% @product.reviews.each do |review| %>

      <div class="row">

        <div class="col-sm-2">
          <dd>
            <%= review.user.first_name %>
            <%= review.user.last_name %>
          </dd>
        </div>

        <div class="col-sm-2">
          <dd>
            <%= review.rating %>
          </dd>
        </div>

        <div class="col-sm-6">
          <dd>
            <%= review.description %>
          </dd>
        </div>

        <div class="col-sm-2">
          <dd>
            <%= review.created_at %>
          </dd>
        </div>

      </div>
    
    <% end %>

    <%= form_for([@product, Review.new]) do |form| %>

      <div class="field">
        <%= form.label :description %>
        <%= form.text_field :description%>
      </div>
    
      <div class="field">
        <%= form.label :rating %>
        <%= form.select :rating, (1..5) %>
      </div>
    
      <div class="actions">
        <%= form.submit %>
      </div>

    <% end %>

  </article>

</section>