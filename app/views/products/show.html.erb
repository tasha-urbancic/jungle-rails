<section class="products-show">

  <header class="page-header">
    <h1>
      <%= link_to @product.category.name, @product.category %> &raquo;
        <%= @product.name %>
    </h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd>
            <%= @product.name %>
          </dd>
          <dt>Description</dt>
          <dd>
            <%= @product.description %>
          </dd>
          <dt>Quantity</dt>
          <dd>
            <%= @product.quantity %>
          </dd>
          <dt>Price</dt>
          <dd>
            <%= @product.price %>
          </dd>
        </dl>
      </div>
    </div>

    <h2>Reviews:</h2>

    <div class="row">

      <div class="col-sm-2">
        <dt>User</dt>
      </div>

      <div class="col-sm-2">
        <dt>Rating</dt>
      </div>

      <div class="col-sm-4">
        <dt>Description</dt>
      </div>

      <div class="col-sm-2">
        <dt>Date Posted</dt>
      </div>

      <div class="col-sm-2">
        <dt>Delete</dt>
      </div>

    </div>

    <% @product.reviews.reverse_each do |review| %>

      <div class="row">

        <div class="col-sm-2">
          <dd>
            <%= review.user.first_name %>
              <%= review.user.last_name %>
          </dd>
        </div>

        <div class="col-sm-2">
          <dd>
            <%= review.rating %>
          </dd>
        </div>

        <div class="col-sm-4">
          <dd>
            <%= review.description %>
          </dd>
        </div>

        <div class="col-sm-2">
          <dd>
            <%= review.created_at %>
          </dd>
        </div>

        <% if current_user.id == review.user_id %>

          <div class="col-sm-2">
            <%= button_to "delete", {controller: :reviews,
                        action: 'destroy', id: review.id}, method: :delete, data: { confirm: "Are you sure?"} %>
          </div>

        <% else %>
          <dd>Unauthorized</dd>
        <% end %>

      </div>

      <% end %>

  </article>

  <% if current_user %>
  
    <div class="panel panel-default">
      <%= form_for [@product, @review] do |form| %>

      <div className="container text-center">
        <div class="row">

          <div class="col-sm-8">
            <div class="review-description">
              <%= form.text_area :description, class: "form-control review-description-field", placeholder: "How was your experience with the #{@product.name}?"%>
            </div>
          </div>

          <div class="col-sm-2">
            <div class="review-rating">
              <%= form.label :rating %>
              <%= form.select :rating, (1..5) %>
            </div>
          </div>

          <div class="col-sm-2">
            <div class="review-submit">
              <%= form.submit "Submit", class: "btn btn-info" %>
            </div>
          </div>
        
        </div>
      </div>

      <% end %>
    </div>

  <% else %>
    <h2>Login to make reviews!</h2>
  <% end %>

</section>